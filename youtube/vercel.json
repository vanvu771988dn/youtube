{
  "version": 2,
  "name": "trendhub-static",
  
  "public": true,

  "headers": [
    {
      "source": "/(.*).(js|css|png|jpg|jpeg|gif|svg|ico|webp)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  
  "redirects": [
    {
      "source": "/old-path",
      "destination": "/",
      "permanent": true
    }
  ],

  "env": {
    "API_KEY": "@trendhub-api-key"
  }
}
